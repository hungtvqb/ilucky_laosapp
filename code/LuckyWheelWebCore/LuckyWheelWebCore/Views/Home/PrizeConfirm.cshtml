            } else {
                //var playId = $(".btn-share-facebook").val();
                if (playId != null && playId > 0) {
                    // post receive prize
                    $.ajax({
                        url: "/Home/ConfirmPrize",
                        data: {
                            __RequestVerificationToken: $('input[name=__RequestVerificationToken]').val(),
                            playId: playId
                        },
                        type: "POST",
                        success: function (data) {
                            console.log(data);
                            if (data.error == "0") {
                                hideModal("modalPrize");
                                //location.reload();
