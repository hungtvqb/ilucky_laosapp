@section Scripts{
    

    <script>

        var url_string = window.location.href;
        var url = new URL(url_string);
        var prizeId = url.searchParams.get("prizeId");
        var playId = url.searchParams.get("playId");

        
        function checkFlag() {
            console.log("Check flag begin " + playId);
